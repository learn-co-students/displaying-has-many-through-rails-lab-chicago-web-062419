<h3> <%= @doctor.name %> </h3>
<h3> <%= @doctor.department %> </h3>

<p> Appointments: </p>
<% @doctor.appointments.each do |appointment| %>
    <p> <%= link_to appointment.patient.name, patient_path(appointment.patient) %> at <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %> </p>
<% end %>