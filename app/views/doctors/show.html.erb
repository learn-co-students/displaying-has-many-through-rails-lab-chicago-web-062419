<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<h2>Appointments</h2>
<% @appointments.each do |appointment| %>
    <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> :
    <%= link_to appointment.patient.name, patient_path(appointment.patient.id) %><br>
<% end %>